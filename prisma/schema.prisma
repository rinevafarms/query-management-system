datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id        String      @id @default(cuid())
  name      String
  email     String      @unique
  phone     String?
  createdAt DateTime    @default(now())
}

model ClientQuery {
  id           String   @id @default(cuid())
  title        String
  description  String
  status       String   @default("PENDING")
  clientId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  followUpDate DateTime?

  @@index([clientId])
}
